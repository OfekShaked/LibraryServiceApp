                    </ListView>

                    <ListView ItemContainerStyle="{StaticResource ListViewTableStyleSelected}" SelectedItem="{Binding SelectedItem,Mode=TwoWay}" ItemsSource="{Binding Items,Mode=TwoWay}" x:Name="listItemView" Grid.Row="0" SelectionMode="Single" IsItemClickEnabled="True" Visibility="{Binding ItemListVisibility}">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.00001*" MinWidth="2"/>
                                        <ColumnDefinition Width="0.15*" MinWidth="80"/>
                                        <ColumnDefinition Width="0.15*" MinWidth="80"/>
                                        <ColumnDefinition Width="0.15*" MinWidth="80"/>
                                        <ColumnDefinition Width="0.15*" MinWidth="80"/>
