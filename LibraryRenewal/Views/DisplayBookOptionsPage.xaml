<Page
    x:Class="LibraryRenewal.Views.DisplayBookOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibraryRenewal.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator},Path=DisplayBooksOptionsPage}">

    <Grid Background="#FF393E46">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.02*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.01*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.01*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="200" FontSize="20" Foreground="White"/>
            <Button x:Name="btnReturn" Command="{Binding ReturnCommand}" Content="Return" Grid.Column="1" BorderBrush="Black" BorderThickness="5" Width="132" FontSize="25" FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Right" Background="#FFEEEEEE" Foreground="#FF222831"/>
            <RadioButton x:Name="rdBook" GroupName="BookType" Grid.Column="1" Content="Show Books" IsChecked="{Binding IsBooksSelected,Mode=TwoWay}" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF00ADB5"/>
            <RadioButton x:Name="rdJournal" GroupName="BookType" Content="Show Journals" FontSize="30" IsChecked="{Binding IsJournalsSelected,Mode=TwoWay}" FontWeight="Bold" HorizontalAlignment="Right" Width="300" Foreground="#FF00ADB5"/>

        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" BorderBrush="White"  BorderThickness="5" Margin="10,10,0,10" Background="#FF222831">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" Text="Search Menu" TextAlignment="Center" FontWeight="ExtraBlack" FontSize="40" Foreground="#FF00ADB5"/>
                <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch"  Text="Publisher :" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="42" FontSize="25" TextAlignment="Center" FontWeight="Bold" Foreground="#FF00ADB5" />
                <AutoSuggestBox Style="{StaticResource AutoSuggestBoxStyle1}" Text="{Binding PublisherSearch,Mode=TwoWay}" ItemsSource="{Binding PublisherSuggestions,Mode=TwoWay}" x:Name="suggestPublisherSearch" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Height="45" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,10,10,10" Background="#eeeeee"/>
                <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" Text="Author :" TextWrapping="Wrap" VerticalAlignment="Stretch" FontSize="25"  TextAlignment="Center" Height="42" FontWeight="Bold" Foreground="#FF00ADB5"/>
                <AutoSuggestBox Style="{StaticResource AutoSuggestBoxStyle1}" Text="{Binding AuthorSearch,Mode=TwoWay}" ItemsSource="{Binding AuthorSuggestions,Mode=TwoWay}"  x:Name="suggestAuthorSearch" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" Height="45" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,10,10,10" Background="#FFEEEEEE"/>
                <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Stretch"  Text="Genre :" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="42" FontSize="25"  TextAlignment="Center" FontWeight="Bold" Foreground="#FF00ADB5"/>
                <AutoSuggestBox Style="{StaticResource AutoSuggestBoxStyle1}" Text="{Binding GenreSearch,Mode=TwoWay}" ItemsSource="{Binding PublisherSuggestions,Mode=TwoWay}" x:Name="suggestGenreSearch" Grid.Column="1" Grid.Row="3" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="45" VerticalAlignment="Stretch" Margin="10,10,10,10" Background="#FFEEEEEE"/>
                <TextBlock Grid.Column="0" Grid.Row="4"  HorizontalAlignment="Stretch"  Text="Name :" TextWrapping="Wrap" VerticalAlignment="Stretch"  FontSize="25" Height="45"  TextAlignment="Center" FontWeight="Bold" Foreground="#FF00ADB5"/>
                <AutoSuggestBox Style="{StaticResource AutoSuggestBoxStyle1}" x:Name="suggestNameSearch" Text="{Binding NameSearch,Mode=TwoWay}" ItemsSource="{Binding NameSuggestions,Mode=TwoWay}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" Height="45" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,10,10,10" Background="#FFEEEEEE"/>
                <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Stretch"  Text="Year :" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="42"   FontSize="25" IsTextSelectionEnabled="True" TextAlignment="Center" FontWeight="Bold" Foreground="#FF00ADB5"/>
                <TextBox x:Name="txtYearSearch"  Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" Text="{Binding YearSearch,Mode=TwoWay}"   VerticalAlignment="Stretch" Margin="10,10,10,10" Height="45" Background="#FFEEEEEE" />
                <RadioButton x:Name="rdBiggerYear" GroupName="Year" Content="Bigger Than Year" IsChecked="{Binding IsBiggerThanYearSelected,Mode=TwoWay}" Grid.ColumnSpan="2" Grid.Row="6" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontWeight="Bold" FontSize="20" Margin="20,0,0,0" Foreground="#FF00ADB5"/>
                <RadioButton x:Name="rdSmallerYear" GroupName="Year" Content="Smaller Than Year" IsChecked="{Binding IsSmallerThanYearSelected,Mode=TwoWay}" Grid.ColumnSpan="2" Grid.Row="6"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontWeight="Bold" FontSize="20" Margin="20,0,0,0" Foreground="#FF00ADB5"/>
                <TextBlock Grid.Column="0" Grid.Row="7"  HorizontalAlignment="Stretch"  Text="Discount :"  TextWrapping="Wrap" VerticalAlignment="Stretch" Height="42"  FontSize="25"  TextAlignment="Center" FontWeight="Bold" Foreground="#FF00ADB5"/>
                <TextBox x:Name="txtDiscountSearch" Height="45" Text="{Binding DiscountSearch,Mode=TwoWay}" Grid.Column="1" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10" Background="#FFEEEEEE" />
                <RadioButton x:Name="rdBiggerDiscount" GroupName="Discount" Content="Bigger Than Discount" IsChecked="{Binding IsBiggerThanDiscountSelected,Mode=TwoWay}" Grid.ColumnSpan="2" Grid.Row="8" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontWeight="Bold" FontSize="20" Margin="20,0,0,0" Foreground="#FF00ADB5"/>
                <RadioButton x:Name="rdSmallerDiscount" GroupName="Discount" IsChecked="{Binding IsSmallerThanDiscountSelected,Mode=TwoWay}" Content="Smaller Than Discount" Grid.ColumnSpan="2" Grid.Row="8"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontWeight="Bold" FontSize="20" Margin="20,0,0,0" Foreground="#FF00ADB5" />
                <Button x:Name="btnSearch" Command="{Binding SearchCommand,Mode=TwoWay}" Grid.ColumnSpan="2" Grid.Row="9" Content="Search" BorderBrush="Black" BorderThickness="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="25" FontWeight="Bold" Margin="40,10,40,10" Background="#FFEEEEEE" Foreground="#FF222831"/>
                <Button x:Name="btnReport" Command="{Binding ReportCommand}" Visibility="{Binding NavData.UserType, Converter={StaticResource employeeVisibilityConv}}" Grid.ColumnSpan="2" Grid.Row="10" Content="Create Report" BorderBrush="Black" BorderThickness="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="25" FontWeight="Bold" Margin="40,10,40,10" Foreground="#FF222831" Background="#FFEEEEEE"/>
            </Grid>
            <Grid Grid.Column="2" Margin="10,10,10,10" Background="#FF222831" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" BorderBrush="White" BorderThickness="5" Padding="10">
                    <ListView ItemContainerStyle="{StaticResource ListViewTableStyleSelected}" SelectedItem="{Binding SelectedBook,Mode=TwoWay}" ItemsSource="{Binding Books,Mode=TwoWay}" x:Name="listBookView" Grid.Row="0" SelectionMode="Single" IsItemClickEnabled="True" Visibility="{Binding BooksListVisibility}">
