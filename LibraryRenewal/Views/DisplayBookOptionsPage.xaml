                                        <ColumnDefinition Width="0.15*" MinWidth="80"/>
                                        <ColumnDefinition Width="0.15*" MinWidth="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Border BorderBrush="AntiqueWhite" BorderThickness="0,0,0,0.5">
